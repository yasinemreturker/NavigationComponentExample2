<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TermsFragment"
    android:layout_margin="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/tvConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temsandcondition"
        android:textSize="24sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tvConditions2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temsandcondition"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/tvConditions"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tvConditions3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temsandcondition"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/tvConditions2"
        android:layout_marginTop="40dp"
        />

</RelativeLayout>